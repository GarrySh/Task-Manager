extends /layouts/application.pug

block content
  .row.justify-content-md-center.mt-5
    .col-12.col-sm-10.col-md-8.col-xl-6
        h1.display-5.mb-5.text-center Edit status settings  
        +formFor(f, { url: urlFor('status.update', f.object['id']), method: 'patch' })
          +input(f, 'name', { label: 'Status name', placeholder: 'Enter new status name' })
          if isSignedIn
            +button(f, urlFor('status.delete', f.object['id']), { class: 'btn-secondary', text: 'Delete status', message: 'Are you sure to delete task status?' })
            +submit(f, 'Change status')