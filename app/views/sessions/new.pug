extends /layouts/application.pug

block content
  .row.justify-content-md-center.mt-5
    .col-12.col-sm-10.col-md-8.col-xl-6
      +formFor(f, { url: urlFor('session'), method: 'post' })
        h1.display-5.mb-5.text-center Please sign in      
        +input(f, 'email', { type: 'email', label: 'Email address', placeholder: 'Email address' })
        +input(f, 'password', { type: 'password', label: 'Password', placeholder: 'Password' })
        +submit(f)