extends /layouts/application.pug

block content
  .row.justify-content-md-center.mt-5
    .col.text-center
      h1.display-5 Registred users list 
      p.lead 
        | All registered users are displayed in this list. To add, use the 'Sign up' 
        | button at the top of the page
      .table-responsive
        table.table.table-striped.table-sm
          thead
            tr
              th ID
              th First name
              th Last name
              th Email
              th Created at
              th Updated at
          tbody
            each user in users
              tr
                td= user.id
                td= user.firstName
                td= user.lastName
                td= user.email
                td= user.createdAt
                td= user.updatedAt