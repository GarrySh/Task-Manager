extends /layouts/application.pug

block content
  .row.justify-content-md-center.mt-5
    .col.text-center 
      +formFor(f, { url: urlFor('user.update', getUserId()), method: 'patch' })
        h1.display-5 Edit user settings      
        +input(f, 'firstName', { id: 'form-signup-firstName', placeholder: 'First name' })
        +input(f, 'lastName', { id: 'form-signup-lastName', placeholder: 'Last name' })
        +input(f, 'email', { type: 'email', id: 'form-signup-email', placeholder: 'Email address' })
        +input(f, 'password', { type: 'password', id: 'form-signup-password', placeholder: 'Password' })
        a.btn.btn-lg.btn-secondary.btn-block.mb-3(href=urlFor('user.delete', getUserId()) data-method='delete' rel='nofollow') Delete user
        +submit(f, 'Change settings')

