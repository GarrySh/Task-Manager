include /mixins/forms.pug

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='icon', href='/favicon.ico')    
    title= pageTitle
    script(src="/assets/vendor.bundle.js") 
    script(src="/assets/app.bundle.js")   
  body
    nav.navbar.navbar-expand-sm.navbar-light.bg-light.border-bottom.box-shadow.mb-3
      .navbar-header
        a.navbar-brand(href='/') Task manager
      .collapse.navbar-collapse
        nav.navbar-nav
          a.nav-link(href=urlFor('users')) Users
          a.nav-link(href='#') Tasks
      nav.navbar-nav
        if isSignedIn()
          a.btn.btn-outline-secondary.ml-1(href=urlFor('user.edit', getUserId())) Settings
          a.btn.btn-secondary.ml-1(href=urlFor('session') data-method='delete' rel='nofollow') Sign out
        else
          a.btn.btn-outline-secondary(href=urlFor('user.new')) Sign up
          a.btn.btn-secondary.ml-1(href=urlFor('session.new')) Sign in
    .container
      - const msg = flash.get()
      if msg
        .alert.alert-info.alert-dismissible= msg
      block content   
