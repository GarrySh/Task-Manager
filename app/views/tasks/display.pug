extends /layouts/application.pug

block content
  .row.justify-content-md-center.mt-5
    .col-12.col-sm-10.col-md-8.col-xl-6
      +formFor(f, { url: urlFor('task.update', f.object.id), method: 'patch' })
        h1.display-5.mb-5.text-center Display task
        +input(f, 'name', { label: 'Name', placeholder: 'Enter new task name', readonly: true })
        +input(f, 'description', { label: 'Description', placeholder: 'Enter new description', readonly: true })
        +select(f, 'statusId', { label: 'Status', data: statuses, readonly: true })
        +select(f, 'assignedToId', { label: 'Assighed to', data: users, readonly: true })
        +input(f, 'tagsStr', { type: 'text', label: 'Tags', placeholder: 'Add coma separated tags, e.g. "server config, nginx"', data: tagsStr, readonly: true })
        if isSignedIn()
          +button(f, urlFor('task.delete', f.object.id), { class: 'btn-secondary', text: 'Delete task', message: 'Are you sure to delete the task?' })
          +submit(f, 'Change task')
        else
          p.lead Only registred users can edit the task