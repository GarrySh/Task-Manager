extends /layouts/application.pug

block content
  .row.justify-content-md-center.mt-5
    .col.text-center
      h1.display-4 Registred tasks list 
      p.lead 
        | All registered taks are displayed in this list. Only reqistred users can add the tasks
      .row.pb-2
        a.btn.btn-outline-secondary(href="#") Add task
        a.btn.btn-outline-secondary(href="#") Add task status
      .table-responsive
        table.table.table-striped.table-sm
          thead
            tr
              th ID
              th Status
              th Task name
              th Description
              th Tags
              th Creator
              th Assigned to
          tbody
            each task in tasks
              tr
                td= task.id
                td= task.status
                td= task.name
                td= task.description
                td= task.tags
                td= task.creator
                td= task.assignedTo
